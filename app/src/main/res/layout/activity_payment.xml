<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="10dp"
              android:orientation="vertical" android:background="#757070"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical" android:background="#E0D1D0">

        <RadioGroup android:id="@+id/radio_group" android:layout_marginTop="40dp"
                    android:layout_width="wrap_content" android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radio_button_cash" android:text="Cash" android:textSize="20dp"
                         android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_button_credit" android:text="Credit" android:textSize="20dp"
                         android:layout_marginTop="5dp"
                         android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_button_online" android:text="Online" android:textSize="20dp"
                         android:layout_marginTop="5dp"
                         android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView android:id="@+id/text_view_message"
                  android:text="Please select a payment method" android:textSize="15dp"
                  android:layout_marginTop="50dp" android:layout_marginLeft="20dp"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_pay" android:layout_marginLeft="20dp"
                  android:background="#9E9393" android:layout_marginRight="20dp" android:padding="8dp"
                  android:text="Pay: $" android:textSize="25dp" android:layout_marginTop="250dp"
                  android:layout_width="match_parent" android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>