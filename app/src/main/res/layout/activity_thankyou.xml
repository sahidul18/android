<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical" android:background="#757070" android:padding="10dp"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent" android:background="#E0D1D0"
                  android:layout_height="match_parent" android:orientation="vertical"
                  android:padding="10dp">

        <TextView android:text=" Thank you for shopping " android:background="#B7BEB8"
                  android:paddingTop="5dp" android:paddingBottom="5dp"
                  android:textSize="20dp" android:textAlignment="center" android:layout_marginTop="30dp"
                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout android:orientation="horizontal"
                      android:weightSum="3" android:layout_marginTop="100dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <Button android:id="@+id/button_shop_again" android:layout_weight="1.4"
                    android:text="Shop Again" android:layout_marginLeft="20dp"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>
            <View android:layout_weight="0.2" android:background="#B7BEB8"
                  android:layout_width="0dp" android:layout_height="150dp"/>
            <Button android:id="@+id/button_your_order" android:layout_weight="1.4"
                    android:text="Your Order" android:layout_marginRight="20dp"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>